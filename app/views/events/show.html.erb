<div class="container">
  <div class="padded">
  </div>

  <div class="media-aside">
    <div class="row">

      <div class="media-section col-xs-12 col-sm-6">
        <h1><%= @event.name%></h1>
        <h5> Last update : <%= @event.updated_at %> </h5>
        <h6> address: <%= @event.address %></h6>
        <% if @event.user == current_user %>
          <%= link_to "Modify", edit_event_path, class: "btn btn-warning" %>
          <%= link_to "Delete", event_path(@event), method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>

      <div class="col-xs-12 col-sm-6">

        <div id="map" style="width: 100%; height: 400px;">
        </div>

      </div>
    </div>

  </div>
</div>

