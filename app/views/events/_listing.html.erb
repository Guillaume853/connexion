
<% @events.each do |event| %>
  <%= link_to event_path (event) do %>
    <div class="card">
      <div class="card-category">Popular</div>
      <div class="card-description">
        <h3><%= event.name %></h2>
        <p>address : <i><%=event.address %></p>
      </div>
    </div>
  <%end %>
<% end %>
